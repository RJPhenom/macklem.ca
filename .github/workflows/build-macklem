name: Deploy to GitHub Pages

on:
    push:
        branches: [main]
    workflow_dispatch:

permissions:
    contents: read
    pages: write
    id-token: write

concurrency:
    group: pages
    cancel-in-progress: true

jobs:
    deploy:
        runs-on: ubuntu-latest
        environment:
            name: github-pages
            url: ${{ steps.deploy.outputs.page_url }}
        steps:
            - uses: actions/checkout@v4
            - uses: actions/setup-node@v4
              with:
                  node-version: 20
                  cache: npm
            - run: npm ci
            - run: npm run build
            - name: SPA fallback
              run: cp dist/index.html dist/404.html
            - name: Ensure CNAME
              run: echo "macklem.ca" > dist/CNAME
            - uses: actions/upload-pages-artifact@v3
              with:
                  path: dist
            - id: deploy
              uses: actions/deploy-pages@v4
